@import "variables.include.styl"

.card
  margin-bottom: 30px
  box-shadow: alpha(grey, 0.3) 1px 1px 2px
  .card-header
    border-collapse: collapse
    display: table
    width: 100%
  h1, h2
    display: table-cell
    height: 40px
    margin: 0
    padding: 10px 20px
    vertical-align: bottom
  h1
    width: 70%
    font-size: 20px
    background-color: #f1f1f1
  h2
    font-size: 18px
    background-color: #97acd1
    color: #e8ebee
  .circlecontainer
    float: left
    margin: 20px
  p
    padding: 10px

.card.folded
  p
    font-size: 18px
    margin: 30px 0
    padding: 0 10px
  position: relative
  margin-bottom: 50px
  &:before, &:after
    content: " "
    position: absolute
    display: block
  &:after
    width: 0
    height: 0
    bottom: -21px
    right: 0
    border-top: 10px #97acd1 solid
    border-left: 10px #97acd1 solid
    border-bottom: 10px transparent solid
    border-right: 10px transparent solid
  &:before
    height: 20px
    bottom: -20px
    right: 21px
    left: 0
    background-color: white
    box-shadow: alpha(grey, 0.3) 1px 1px 2px

#wrapper
  .sidebar
    .tile
      display: table
      width: 100%
      border-collapse: separate
      border-spacing: 10px 8px
      .circlecontainer, p
        vertical-align: middle
        display: table-cell
    .circlecontainer
      float: none
    .circle-frame-border
      height: 70px
      width: 70px
      padding: 2px

#searchform
  display: table
  width: 100%
#searchinput
  display: table-cell
  height: 40px
  padding: 5px 10px
  border: none
  width: 100%
#searchicon
  display: table-cell
  width: 40px
  height: 40px
  background-color: #97acd1
  vertical-align: middle
  #iconborder
    margin: 0 auto
    width: 20px
    height: 20px
    padding: 3px
    background-color: white
    border-radius: 100%
  #iconcore
    width: 100%
    height: 100%
    background-color: #97acd1
    border-radius: 100%
