@import "variables.include.styl"

.afe-body
  color: white

.bgimg
  background-position: center
  background-size: cover
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%
  z-index: -100

.bgimg-fg
  z-index: -99

section
  position: relative

#cover
  background-position: center
  background-size: cover

  display: table
  width: 100%
  .center-block
    display: table-cell
    text-align: center
    vertical-align: middle
    .wrapper-block
      width: 360px
      margin: auto
      text-shadow: rgba(0, 0, 0, 0.48) 1px 1px 3px;
      h1, h2, h3
        margin: 5px 0 10px
      h1
        font-family: $font-family-sans-serif-withbold
        letter-spacing: 2px
        font-size: 32px
        font-weight: 900
      h2
        word-spacing: 5px
        font-size: 22px
        font-weight: 300
      h3
        font-size: 20px
        opacity: 0.6
  #scrollbutton-wrapper
    position: absolute
    width: 100%
    height: 52px
    left: 0
    right: 0
    bottom: 100px
    text-align: center
    #scrollbutton
      width: 14px
      height: 52px

#searchform
  margin: 20px 0
  position: relative
  &:before
    left: 10px
    top: 6px
    position: absolute
    content: " "
    display: block
    width: 18px
    height: 18px
    background-color: transparent
    border: 3px #989898 solid
    border-radius: 100%
  #searchinput
    height: 30px
    padding: 5px 10px 5px 40px
    border: none
    border-radius: 30px
    width: 100%
    color: #989898

#introduce
  background-position: center
  background-size: cover
  .afe-banner
    background-image: none
    height: 188px
    position: relative
    &:before
      content: none
  .title-label
    position: relative
    text-align: center
    z-index: 100
    width: 207px
    top: 0
    left: 100px
    height: 100%
    background-color: transparent
    color: #334452
    box-shadow: none
  #introduce-wrapper
    width: 100%
    background-color: alpha(black, 0.3)
    font-size: 16px
    #wrapper
      .introduce-nav
        display: absolute
        list-style-type: none
        padding: 0
        float: left
        width: 40px
        .nav-dot
          margin: 0 0 10px
          width: 14px
          height: 14px
          background-color: transparent
          border: 2px white solid
          border-radius: 100%
          position: relative
          &.active:before
            left: 2px
            top: 2px
            position: absolute
            content: " "
            display: block
            width: 0px
            height: 0px
            background-color: white
            border: 3px white solid
            border-radius: 100%
      .introduce-item
        margin-left: 40px
        width: 58.33333333%
