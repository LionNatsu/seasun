extend templates/masterB.jade

append stylesheet
  +include-css("/assets/css/ship.css")
  -
    var ship = {};
    for(value in ships) {
      ship = ships[1];
      if(ships[value].name == urlParams.name) {
        ship = ships[value];
        break;
      }
    }
  style .afe-body {background-image: url("#{ship.photoUrl}");

block content
  -
    var ship = {};
    for(value in ships) {
      ship = ships[1];
      if(ships[value].name == urlParams.name) {
        ship = ships[value];
        break;
      }
    }
  #figue
    h1=ship.name
    p=ship.photoDescription
  #wrapper
    #datasheet
      table
        tr
          td(style="width: 207px;")
            h1=ship.name
          td(rowspan="2", style="min-width: 90px; text-align: center; background-color: #ccd7e8;")
            h3=ship.number
        tr
          td
            h2=ship.subTitle
      - var paras = ship.particulars.split("\n");
      each para in paras
        p=para
      a.back-to-fleet(href='/'+lang+"/fleet") Back
